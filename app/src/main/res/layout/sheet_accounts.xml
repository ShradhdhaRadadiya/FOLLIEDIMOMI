<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		android:id="@+id/root_linear"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:animateLayoutChanges="true"
		android:background="@color/white"
		android:orientation="vertical">

	<androidx.cardview.widget.CardView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:elevation="5dp">

		<RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="@drawable/back_et"
				android:backgroundTint="@color/background"
				android:elevation="5dp"
				android:padding="1dp">

			<TextView
					android:id="@+id/tv_title"
					android:layout_width="match_parent"
					android:layout_height="50dp"
					android:background="@color/background"
					android:elevation="5dp"
					android:gravity="center"
					android:text="@string/my_account"
					android:textAllCaps="true"
					android:textColor="@color/colorPrimary"
					android:textSize="15sp"
					android:textStyle="bold"
					android:typeface="monospace"
					tools:ignore="AllCaps" />

			<TextView
					android:id="@+id/tvError"
					android:layout_width="match_parent"
					android:layout_height="50dp"
					android:background="@color/error"
					android:elevation="5dp"
					android:gravity="center"
					android:text=""
					android:textColor="@color/white"
					android:textSize="15sp"
					android:visibility="gone" />

		</RelativeLayout>

	</androidx.cardview.widget.CardView>

	<LinearLayout
			android:id="@+id/ll_login"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:paddingStart="16dp"
			android:paddingTop="10dp"
			android:paddingEnd="16dp"
			android:paddingBottom="20dp">

		<TextView
				android:id="@+id/tvMyAccount"
				android:layout_width="match_parent"
				android:layout_height="45dp"
				android:gravity="center"
				android:text="@string/my_account"
				android:textAppearance="@style/TextAppearance.AppCompat.Body1"
				android:textColor="@color/colorSecondaryTextDark"
				android:textStyle="bold"
				android:textSize="14sp" />

		<View
				android:layout_width="match_parent"
				android:layout_height="1dp"
				android:background="@drawable/back_dotted_line" />

		<TextView
				android:id="@+id/tvOrderTracking"
				android:layout_width="match_parent"
				android:layout_height="45dp"
				android:gravity="center"
				android:text="@string/order_tracking"
				android:textAppearance="@style/TextAppearance.AppCompat.Body1"
				android:textColor="@color/colorSecondaryTextDark"
				android:textStyle="bold"
				android:textSize="14sp" />

		<View
				android:layout_width="match_parent"
				android:layout_height="1dp"
				android:background="@drawable/back_dotted_line" />

		<TextView
				android:id="@+id/tvCreditNote"
				android:layout_width="match_parent"
				android:layout_height="45dp"
				android:gravity="center"
				android:text="@string/credit_notes"
				android:textAppearance="@style/TextAppearance.AppCompat.Body1"
				android:textColor="@color/colorSecondaryTextDark"
				android:textStyle="bold"
				android:textSize="14sp" />

		<View
				android:layout_width="match_parent"
				android:layout_height="1dp"
				android:background="@drawable/back_dotted_line" />

		<TextView
				android:id="@+id/tvAddress"
				android:layout_width="match_parent"
				android:layout_height="45dp"
				android:gravity="center"
				android:text="@string/addresses"
				android:textAppearance="@style/TextAppearance.AppCompat.Body1"
				android:textColor="@color/colorSecondaryTextDark"
				android:textStyle="bold"
				android:textSize="14sp" />

		<View
				android:layout_width="match_parent"
				android:layout_height="1dp"
				android:background="@drawable/back_dotted_line" />

		<TextView
				android:id="@+id/tvLogin"
				android:layout_width="match_parent"
				android:layout_height="45dp"
				android:gravity="center"
				android:text="@string/login"
				android:textAppearance="@style/TextAppearance.AppCompat.Body1"
				android:textColor="@color/colorSecondaryTextDark"
				android:textStyle="bold"
				android:textSize="14sp" />

		<View
				android:id="@+id/vLogin"
				android:layout_width="match_parent"
				android:layout_height="1dp"
				android:background="@drawable/back_dotted_line" />

		<TextView
				android:visibility="gone"
				android:id="@+id/tvLogout"
				android:layout_width="match_parent"
				android:layout_height="45dp"
				android:gravity="center"
				android:text="@string/log_out"
				android:textAppearance="@style/TextAppearance.AppCompat.Body1"
				android:textColor="@color/colorSecondaryTextDark"
				android:textStyle="bold"
				android:textSize="14sp" />

		<View
				android:visibility="gone"
				android:id="@+id/vLogout"
				android:layout_width="match_parent"
				android:layout_height="1dp"
				android:background="@drawable/back_dotted_line" />

	</LinearLayout>


</LinearLayout>
